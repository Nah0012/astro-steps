---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title} class="post">
	<div class="md-head">
		<p class="md-title">{frontmatter.title}</p>
		<div class="md-discriptions">
			<p class="md-date">
				created at: {frontmatter.pubDate.toDateString()}
			</p>
			<p class="md-tags">
				tags: {
					frontmatter.tags.map((tag: unknown) => (
						<a href={`/tags/${tag}`}>[{tag}]</a>
					))
				}
			</p>
		</div>
		<img
			src={frontmatter.image.url}
			width="300"
			alt={frontmatter.image.alt}
		/>
	</div>
	<slot />
</BaseLayout>
